{
  "name": "wapulse-mcp",
  "version": "1.0.0",
  "description": "MCP server for WaPulse WhatsApp Web API",
  "main": "dist/server.js",
  "module": "./src/server.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:http": "NODE_ENV=production tsx src/server.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "fastmcp": "^3.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.17",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  },
  "tsup": {
    "entry": [
      "src/server.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
